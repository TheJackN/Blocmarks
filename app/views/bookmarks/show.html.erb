<h2 class="text-center"><strong><%= @bookmark.url %></strong></h2>
<div class="jumbotron">
  <div class="text-center">
    <%= link_to @bookmark.url do %>
      <%= image_tag('http://lorempixel.com/output/abstract-q-g-800-500-6.jpg') %>
    <% end %>
  </div>
  <br />
  <div class="text-center">
    <%= render partial: 'likes/like', locals: { bookmark: @bookmark } %>
    <br />
    <% if policy(@bookmark).destroy? %>
      <%= link_to "Edit Bookmark", edit_topic_bookmark_path(@bookmark.topic, @bookmark), class: 'btn btn-primary' %>
      <%= link_to "Delete Bookmark", [@bookmark.topic, @bookmark], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this bookmark?'} %>
    <% end %>
  </div>
</div>

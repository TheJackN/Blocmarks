<h1 class="text-center">New Bookmark</h1>

<div class="container-fluid">
  <h4 class="text-left">Just enter your bookmark URL<h4>
    <br />
  <%= form_for [@topic, @bookmark] do |f| %>
    <div class="form-group">
      <%= f.label :url %>
      <%= f.text_field :url, class: 'form-control', placeholder: "Enter Topic Name", autofocus: true %>
    </div>
    <%= f.submit "Save", class: 'btn btn-success' %>
  <% end %>
</div>

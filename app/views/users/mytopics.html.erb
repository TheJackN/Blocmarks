<h2 class="text-center">My Blocmarks</h2>

<div class="row">
  <div class="col-md-4">
    <% if @topics.nil? %>
      <h2>No Topics!</h2>
    <% else %>
      <% @topics.each do |topic| %>
        <div class="media-heading">
          <h4 class="text-left"><%= link_to topic.title, topic %></h4>
        </div>
        <br/>
        <% if topic.bookmarks.nil? %>
          <p>Topic Empty!</p>
        <% else %>
          <% topic.bookmarks[0..3].each do |bookmark| %>
            <div class="col-xs-6 col-md-3">
              <%= link_to "#{bookmark.url}", [bookmark.topic, bookmark] %>
              <div class="caption">
                <%= render partial: 'likes/like', locals: { bookmark: bookmark } %>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <br />
  <div class="text-right">
    <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
  </div>
</div>
